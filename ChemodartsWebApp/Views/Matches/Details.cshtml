@model ChemodartsWebApp.Models.Player

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Player</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlayerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerDartname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlayerDartname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerContactData)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlayerContactData)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerInterpret)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlayerInterpret)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlayerSong)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlayerSong)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PlayerId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Match ID
                    @*@Html.DisplayNameFor(model => model.Matches)*@
                </th>
                <th>
                    Heim
                    @*@Html.DisplayNameFor(model => model.Matches)*@
                </th>
                <th>
                    Gast
                    @*@Html.DisplayNameFor(model => model.Matches)*@
                </th>
                <th>
                    Status
                    @*@Html.DisplayNameFor(model => model.Matches)*@
                </th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Matches) {
            <tr>
                <td>
                    <a asp-controller="Matches" asp-action="Index" asp-route-id="@item.MatchId">
                    @Html.DisplayFor(modelItem => item.MatchId)
                    </a>
                </td>
                <td>
                    <a asp-controller="Players" asp-action="Details" asp-route-id="@item.Player1.PlayerId">
                            @{
                                var p1Name = item.Player1.PlayerName + " \"" + item.Player1.PlayerDartname + "\"";
                                @Html.DisplayFor(modelItem => p1Name)
                            }
                    </a>
                </td>
                <td>
                    <a asp-controller="Players" asp-action="Details" asp-route-id="@item.Player2.PlayerId">
                            @{
                                var p2Name = item.Player2.PlayerName +  " \"" + item.Player2.PlayerDartname + "\"";
                                @Html.DisplayFor(modelItem => p2Name)
                            }
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
