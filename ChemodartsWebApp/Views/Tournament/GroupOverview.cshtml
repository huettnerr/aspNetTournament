@model Group

<div>
    <a asp-action="Round" asp-route-id="@Model.Round.RoundId">Back</a>
</div>

<div class="text-center">
    <h1 class="display-4">Gruppe <b>@Model.GroupName</b></h1>
</div>

@Html.DisplayFor(m => Model.RankedSeeds, "Seed/SeedGroupList")
<br />

@{
    bool showAll = false;
    if (Context.Request.Query["showAll"].Equals("true") || (ViewData["showAll"]?.Equals("true") ?? false)) showAll = true;

    if (!showAll)
    {
             <a asp-controller="Tournament" asp-action="Matches" asp-route-showAll="true">Alle Anzeigen</a>
    }
    else
    {
            <a asp-controller="Tournament" asp-action="Matches">Beendete Ausblenden</a>
    }
}

@await Html.PartialAsync("../Shared/DisplayTemplates/Match/MatchList", Model.OrderedMatches)