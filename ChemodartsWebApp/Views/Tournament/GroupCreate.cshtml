@model ChemodartsWebApp.Models.GroupFactory

@{
    ViewData["Title"] = "Create Group";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<h1>Create</h1>

<h4>Group</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GroupCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayersPerGroup" class="control-label"></label>
                <input asp-for="PlayersPerGroup" class="form-control" />
                <span asp-validation-for="PlayersPerGroup" class="text-danger"></span>
            </div>
             <input type="hidden" asp-for="RoundId" value="@(Context.Request.Query["roundId"])"/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
